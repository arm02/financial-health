server {
    listen 80;
    server_name your-domain.com;

    # Frontend static files
    root /var/www/frontend/dist/frontend/browser;
    index index.html;

    # Proxy API requests to backend (hide actual backend URL)
    location /api/ {
        # Ganti dengan URL backend kamu
        proxy_pass https://engine-financial.adrianmilano.my.id;

        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host engine-financial.adrianmilano.my.id;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        proxy_ssl_server_name on;

        # Cookie handling
        proxy_cookie_path / /;
        proxy_cookie_domain engine-financial.adrianmilano.my.id $host;
    }

    # Angular routing - serve index.html for all routes
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Cache static assets
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }
}

